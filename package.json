{
  "name": "doki-doki-blue-seas",
  "version": "1.0.0",
  "description": "Website for the DDLC mod \"The Blue Seas\".",
  "scripts": {
    "sass": "sass --watch scss:css --style compressed",
    "sass:build": "sass scss:css --style compressed",
    "server": "browser-sync start --server --files \"css/*.css, js/*.js, *.html, pages/*.html, components/*.html\" --port 3000 --no-notify",
    "dev": "npm run sass:build && npm-run-all --parallel sass server",
    "build": "npm run sass:build",
    "prettier": "prettier --write \"**/*.{html,css,js,json}\""
  },
  "author": "L4w1i3t",
  "devDependencies": {
    "browser-sync": "^3.0.4",
    "npm-run-all": "^4.1.5",
    "sass": "latest"
  },
  "dependencies": {
    "prettier": "^3.8.1"
  }
}
